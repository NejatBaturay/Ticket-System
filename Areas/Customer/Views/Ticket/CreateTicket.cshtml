@{
}
<body class="ticket-Creation-body">
    <div class="ticket-Creation-container">
        <div class="row">

            <div class="col-3"></div>


            <div class="col-6 ticket-Creation-col">
                <h3>Ticket Creation</h3>
                <img src="~/warning.png" class="createImages">
                <form asp-action="CreateTicket" asp-controller="Ticket" method="post">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label" Employee Name>Name</label>
                        <input type="text" class="form-control" asp-for="ticketerName" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label" Employee Name>Registiration Number</label>
                        <span asp-validation-for="registirationNumber"></span>
                        <input type="text" class="form-control" asp-for="registirationNumber" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Category</label>

                        <select class="form-select" aria-label="Default select example" asp-for="CategoryId">
                            <option selected>Select Employee Category</option>
                            @{
                                foreach (var items in ViewBag.Category)
                                {

                                    <option value="@items.Id">@items.categoryName</option>
                                }
                            }
                        </select>

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label" Employee Name>Description</label>
                        <input type="text" class="form-control" asp-for="ticketDesc" aria-describedby="emailHelp">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-3"></div>
        </div>
    </div>
</body>