}
<body class="employee-Creation-body">
    <div class="employee-Creation-container">
        <div class="row">

            <div class="col-3"></div>
            <div class="col-6 employee-Creation-col">
                <h3>Create Customer</h3>
                <img src="~/employees.png" class="createImages">
                <form asp-area="Admin" asp-action="CreateCustomer" asp-controller="Customer" method="post">
                    <div class="mb-3" style="text-align:center">
                        <label class="form-label">Custoemer Name <span class="text-danger">*</span>
                            <span  asp-validation-for="@Model.customerName" class="text-danger"></span></label>
                        <input type="text" class="form-control" asp-for="customerName" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3" style="text-align:center">
                        <label  class="form-label">Customer Surname<span class="text-danger">*</span>
                        <span asp-validation-for="@Model.customerSurname" class="text-danger"></span></label>
                        <input type="text" class="form-control" asp-for="customerSurname" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3" style="text-align:center">
                        <label class="form-label">
                            Customer UserName<span class="text-danger">*</span>
                            <span asp-validation-for="@Model.customerUserName" class="text-danger"></span>
                        </label>
                        <input type="text" class="form-control" asp-for="customerUserName" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3" style="text-align:center">
                        <label for="password" class="form-label">
                            Customer Password<span class="text-danger">*</span>
                            <span asp-validation-for="@Model.customerPassword" class="text-danger"></span>
                        </label>
                        <input type="password" class="form-control" asp-for="customerPassword">
                    </div>

                    <button type="submit" class="btn btn-primary">Create Customer</button>
                </form>
            </div>
            <div class="col-3"></div>

        </div>
    </div>
</body>
