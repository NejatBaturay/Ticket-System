<body class="employee-Creation-body">
    <div class="employee-Creation-container">
    <div class="row">

        <div class="col-3"></div>
        <div class="col-6 employee-Creation-col" >
            <h3>Create Employee</h3>
            <img src="~/employees.png" class="createImages">
            <form asp-area="Admin" asp-action="CreateEmployee" asp-controller="Employee" method="post">
                <div class="mb-3" style="text-align:center">
                    <label for="exampleInputEmail1" class="form-label" Employee Name>Employee Name</label>
                    <input type="text" class="form-control" asp-for="employeeName" aria-describedby="emailHelp">
                </div>
                <div class="mb-3" style="text-align:center">
                    <label for="password" class="form-label" Employee Name>Employee Password</label>
                    <input type="password" class="form-control" asp-for="employeePassword">
                </div>


                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Category</label>

                    <select class="form-select" aria-label="Default select example" asp-for="CategoryId">
                        <option selected>Select Employee Category</option>
                        @{
                            foreach (var items in ViewBag.Category)
                            {

                                <option value="@items.Id">@items.categoryName</option>
                            }
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Create Employee</button>
            </form>
        </div>
        <div class="col-3"></div>

    </div>
    </div>
</body> 
