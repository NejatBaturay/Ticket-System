<body class="employee-Creation-body">
    <div class="employee-Creation-container">
        <div class="row">

            <div class="col-3"></div>
            <div class="col-6 employee-Creation-col">
                <h3>Create Admin</h3>
                <img src="~/employees.png" class="createImages">
                <form asp-action="CreateAdmin" asp-controller="Home" asp-area="Admin" method="post">
                    <div class="mb-3" style="text-align:center">
                        <label for="exampleInputEmail1" class="form-label" Employee Name>Admin Name</label>
                        <input type="text" class="form-control" asp-for="userName" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3" style="text-align:center">
                        <label for="password" class="form-label" Employee Name>Admin Password</label>
                        <input type="password" class="form-control" asp-for="password">
                    </div>

                    <button type="submit" class="btn btn-primary">Create Employee</button>
                </form>
            </div>
            <div class="col-3"></div>

        </div>
    </div>
</body>

