
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>




</head>
<body style="background-color:grey">

       <nav class="navbar navbar-expand-lg navbar-light bg-light" >
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Admin Giris</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-action="CreateEmployee" asp-controller="Employee">Create Employee</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-action="EmployeeList" asp-controller="Employee">SignOut</a>
                </li>
             
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-action="SignOutAdmin" asp-controller="Home">SignOut</a>
                </li>
            }
            else
            {
            <li class="nav-item">
                <a class="nav-link" asp-action="SignIn" asp-controller="Home" asp-area="Admin">SignIn</a>
            </li>
            }
        </ul>
    </div>
  </div>
</nav>

    <div class="container">
        @RenderBody()
    </div>


        <footer class="bg-dark p-2 text-white text-center fixed-bottom">
            STAJYER TRİAL DEV TEST
         </footer>

    @RenderSection("Scripts",false)


</body>


</html>
